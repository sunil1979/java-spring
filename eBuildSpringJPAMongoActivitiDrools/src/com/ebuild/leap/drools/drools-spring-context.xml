<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="bathroomRulesKnowledge" class="com.ebuild.leap.drools.KnowledgeFactoryBean">
		<description>Knowledgebase for Bathroom related rules</description>
		<constructor-arg>
			<map>
				<entry key="com/ebuild/leap/drools/bathroom_rules.drl" value="DRL" />
			</map>
		</constructor-arg>
	</bean>

	<bean id="flattenTreeRulesKnowledge" class="com.ebuild.leap.drools.KnowledgeFactoryBean">
		<description>Knowledgebase for flattening a given tree containing
			elements connected by elementmanifest</description>
		<constructor-arg>
			<map>
				<entry key="com/ebuild/leap/drools/flatten_tree.drl" value="DRL" />
			</map>
		</constructor-arg>
	</bean>
</beans>